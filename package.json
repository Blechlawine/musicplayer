{
    "name": "musicplayer",
    "private": true,
    "version": "0.0.2",
    "scripts": {
        "dev": "concurrently -k \"cross-env BROWSER=none yarn vite:dev\" \"yarn electron:dev\"",
        "build": "yarn vite:build && yarn electron:build",
        "vite:dev": "vite",
        "vite:build": "vue-tsc --noEmit && cross-env ENVIRONMENT=production vite build",
        "vite:preview": "vite preview",
        "electron:dev": "yarn electron:compile && wait-on tcp:3000 && cross-env ENVIRONMENT=development electron .",
        "electron:compile": "tsc --build tsconfig.electron.json",
        "electron:build": "yarn electron:compile && electron-builder -wl"
    },
    "main": "electronCompiled/electron.js",
    "dependencies": {
        "autoprefixer": "^10.4.7",
        "electron-window-state": "^5.0.3",
        "music-metadata": "^7.12.3",
        "pinia": "^2.0.13",
        "pinia-plugin-persistedstate": "^1.6.1",
        "postcss": "^8.4.13",
        "sqlite3": "^5.0.2",
        "tailwindcss": "^3.0.24",
        "typeorm": "^0.3.10",
        "vue": "3.2.41",
        "vue-router": "4"
    },
    "devDependencies": {
        "@types/node": "^17.0.23",
        "@vitejs/plugin-vue": "^3.2.0",
        "concurrently": "^7.1.0",
        "cross-env": "^7.0.3",
        "electron": "^18.0.3",
        "electron-builder": "^22.14.13",
        "sass": "^1.51.0",
        "typescript": "^4.8.4",
        "vite": "^3.2.2",
        "vue-tsc": "^1.0.9",
        "wait-on": "^6.0.1"
    },
    "author": "Blechlawine",
    "license": "GPL-3.0",
    "build": {
        "appId": "de.blechlawine.musicplayer",
        "productName": "MusicPlayer",
        "mac": {
            "category": "public.app-category.music",
            "icon": "icon.png"
        },
        "linux": {
            "category": "Audio",
            "icon": "icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "win": {
            "icon": "icon.png"
        },
        "files": [
            "dist/",
            "electronCompiled/",
            "assets/"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        }
    }
}
