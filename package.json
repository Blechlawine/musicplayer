{
    "name": "musicplayer",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "vite",
        "build": "vue-tsc --noEmit && vite build",
        "preview": "vite preview",
        "electron": "yarn build:typescript:electron && wait-on tcp:3000 && cross-env ENVIRONMENT=development electron .",
        "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
        "build:typescript:electron": "tsc --build tsconfig.electron.json",
        "build:electron": "electron-builder",
        "build:vue": "vue-tsc --noEmit && cross-env ENVIRONMENT=production vite build",
        "build:app": "yarn build:vue && yarn build:electron"
    },
    "main": "electronCompiled/electron.js",
    "dependencies": {
        "autoprefixer": "^10.4.7",
        "electron-window-state": "^5.0.3",
        "music-metadata": "^7.12.3",
        "pinia": "^2.0.13",
        "pinia-plugin-persistedstate": "^1.6.1",
        "postcss": "^8.4.13",
        "sqlite3": "^5.0.2",
        "tailwindcss": "^3.0.24",
        "typeorm": "^0.3.6",
        "vue": "3.2.37",
        "vue-router": "4"
    },
    "devDependencies": {
        "@types/node": "^17.0.23",
        "@vitejs/plugin-vue": "^2.3.0",
        "concurrently": "^7.1.0",
        "cross-env": "^7.0.3",
        "electron": "^18.0.3",
        "electron-builder": "^22.14.13",
        "sass": "^1.51.0",
        "typescript": "^4.5.4",
        "vite": "^2.9.0",
        "vue-tsc": "^0.29.8",
        "wait-on": "^6.0.1"
    },
    "author": "Blechlawine",
    "build": {
        "appId": "de.blechlawine.musicplayer",
        "productName": "MusicPlayer",
        "mac": {
            "category": "public.app-category.music"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "dist/**/*",
            "electronCompiled/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        }
    }
}
